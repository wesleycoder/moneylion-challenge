{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "json.schemas": [
    {
      "fileMatch": [
        "**/*.jsonc",
        "**/biome.jsonc"
      ],
      "schema": {
        "allowTrailingCommas": true,
      },
    },
  ],
}
